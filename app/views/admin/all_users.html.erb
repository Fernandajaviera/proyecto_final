<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Usuarios</h1>
</div>

<div class="py-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Email</td>
        <th scope="col">Rol</td>
        <th scope="col">Fecha registro</td>
        <th scope="col">Última actualización</td>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
          <td><%= link_to 'Eliminar', admin_delete_user_path(user_id: user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>