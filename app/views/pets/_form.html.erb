<%= form_with(model: pet, local: true) do |form| %>
  <% if pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% pet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :age, class: "form-label" %>
    <%= form.number_field :age, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :weight, class: "form-label" %>
    <%= form.number_field :weight, class: "form-control", step: 0.1 %>
  </div>

  <div class="mb-3">
    <%= form.label :species, class: "form-label" %>
    <%= form.text_field :species, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :race, class: "form-label" %>
    <%= form.text_field :race, class: "form-control" %>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>

<% end %>
